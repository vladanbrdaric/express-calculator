pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('unit-test') {
      steps {
        sh 'npm run unit-test'
      }
    }
    stage('e2e-tests') {
      steps {
        sh 'chmod +x e2e-test.sh'
        sh 'echo "./e2e-test.sh"'
      }
    }
    stage('integration-test') {
      steps {
        sh 'npm run integration-test'
      }
    }
  }
}
