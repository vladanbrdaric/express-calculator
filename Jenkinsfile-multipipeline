pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('unit-test') {
      steps {
        sh 'npm run unit-test'
      }
    }
    stage('integration-test') {
      steps {
        sh 'npm run integration-test'
      }
    }

    stage('e2e-tests') {
      steps {
        sh './e2e-test.sh'
      }
    }
  }
}
