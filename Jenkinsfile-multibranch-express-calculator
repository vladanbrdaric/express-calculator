pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('Delivery') {
      when {
        branch 'master'
      }
      steps {
        script {
      	  docker.withRegistry('https://hub.docker.com', 'a2910ec9-eaec-44dd-a4a4-08bbac119628') {
            def image = docker.build("vladobrdaric/express-calculator")
	    image.push()
      	  }
	}
      }
    }
  }
}
