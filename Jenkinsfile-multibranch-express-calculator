pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('Delivery') {
      when {
        branch 'master'
      }
      steps {
        script {
	  node {
	    checkout scm
      	    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
              def image = docker.build("vladobrdaric/express-calculator")
	      image.push("$BUILD_ID")
      	    }
	  }
	}
      }
    }
  }
}
