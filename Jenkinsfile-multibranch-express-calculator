pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('unit-test') {
      when {
        branch 'feature/*'
      }
      steps {
        sh 'npm run unit-test'
      }
    }

    stage('integration-test') {
      when {
        branch 'develop'
      }
      steps {
        sh 'npm run integration-test'
      }
    }
    stage('Delivery') {
      when {
        branch 'master'
      }
      steps {
        sh 'echo "Do this ..."'
      }
    }
  }
}
